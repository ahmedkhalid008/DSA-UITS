#include <bits/stdc++.h>
using namespace std;

struct Node {
    int data;
    Node* next;
};

Node* topNode = NULL;

void push(int value) {
    Node* newNode = new Node;
    newNode->data = value;
    newNode->next = topNode;
    topNode = newNode;
}

int pop() {
    if(topNode == NULL) {
        cout << "Stack Underflow\n";
        return -1;
    }
    Node* temp = topNode;
    int val = temp->data;
    topNode = topNode->next;
    delete temp;
    return val;
}

int peek(){
    if(topNode==NULL){
        cout<<"Stack is empty!.\n";
        return -1;
    }
    return topNode->data;
}

void display() {
    Node* temp = topNode;
    cout << "Stack top -> ";
    while(temp != NULL) {
        cout << temp->data << " -> ";
        temp = temp->next;
    }
    cout << "NULL\n";
}

int main() {
    push(10); push(20); push(30);
    display();
    cout<<"Peak is : " <<peek();
    

    cout << "\nPop: " << pop() << endl;
    display();
    cout<<"Peak is : " <<peek();

    cout << "\nPop: " << pop() << endl;
    display();
    cout<<"Peak is : " <<peek();
    cout << "\nPop: " << pop() << endl;
    display();
    cout<<"Peek is :"<<peek()<<endl;
    
    return 0;
}
