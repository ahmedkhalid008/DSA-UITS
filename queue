#include<bits/stdc++.h>
using namespace std;

struct Node{
    int data;
    Node* next;
};

Node* front = NULL;
Node* rear = NULL;

void enqueue(int value) {
    Node* newNode = new Node;
    newNode->data = value;
    newNode->next = NULL;

    if(front == NULL) { 
        front = rear = newNode;
    } else {
        rear->next = newNode;
        rear = newNode;
    }
}

int dequeue(){
    if(front == NULL){
        cout<<"Queue Underflow";
        return -1;
    }
    Node* temp=front;
    int value = temp->data;
    front = front->next;
    
    if(front==NULL){
        rear = NULL;
    }
    delete temp;
    return value;
}

int peek(){
    if(front==NULL){
        cout<<"Queue is Empty!\n";
        return -1;
    }
    return front->data;
}
bool isEmpty() {
    return (front == NULL);
}

void display() {
    if (front == NULL) {
        cout << "Queue is empty!\n";
        return;
    }

    Node* temp = front;
    

    while (temp != NULL) {
        cout << temp->data << " -> ";
        temp = temp->next;
    }

    cout << "NULL\n";
}

int main(){
    enqueue (10);
    enqueue (20);
    enqueue (30);
    enqueue (40);
    enqueue (50);
    enqueue (60);
    display();
    cout<<"Peek is : "<<peek()<<endl;
    dequeue();
    display();
    cout<<"first element is dequeued successfully.\n";
     cout<<"Peak is :"<<peek()<<endl;
    
    if(isEmpty()){
        cout<<"Queue is Empty ";
    }else{
        cout<<"Queue is not Empty";
    }
    return 0;
}
